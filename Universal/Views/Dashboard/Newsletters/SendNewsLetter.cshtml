@{
    ViewData["Title"] = "Send newsletter";
}


<div class="richTextForm" style="max-width: 1300px; margin: 0 auto;">
    @using (Html.BeginForm("SendNewsletterAction", "Dashboard", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="form-group mb-3">
            @Html.Label("Newsletter content: ")
            @Html.TextArea("newsletterContent", null, 15, 1, new { @Id = "tiny", @class = "form-control", placeholder = "Content" })
        </div>
        <div class="form-group mb-3 text-center">
            <input type="submit" value="Send" class="btn btn-dotnet w-25">
            <input type="reset" value="Cancel" class="btn btn-dotnet w-25">
        </div>
    }
</div>