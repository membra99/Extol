@{
    ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <div class="container">
        <div class="row">
            <div class="col-4">
                <form method="post" asp-controller="Dashboard" asp-action="ImportExcel" enctype="multipart/form-data">
                    <input type="file" name="file" class="form-control" />
                </form>
            </div>
            <div class="col-2">
                <button class="btn btn-dotnet" type="submit">Import from Excel</button>
            </div>
            <div class="col-6 d-flex justify-content-center">
                <div>
                    <span style="font-size:25px">Download Excel Template </span>
                    <a href="/Dashboard/DownloadExcelTemplate" class='excel' style="font-size:25px"><i class="fa-solid fa-file-excel"></i></a>
                </div>
                
            </div>
        </div>
        
    </div>
</div>
