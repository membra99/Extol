@model List<Universal.DTO.ODTO.ProductODTO>
@{
	ViewData["Title"] = "Data";
}

<div class="col-10">
	<table id="userTable" class="table table-striped display text-center w-100">
		<thead>
			<tr>
				<th>Category</th>
				<th>Product Code</th>
				<th>Product Name</th>
				<th>Description</th>
				<th>Specification</th>
				<th>Price</th>
				<th>On Sale</th>
				<th>Best Product</th>
				<th>Recommended</th>
				<th>Created At</th>
				<th>Updated At</th>
				<th>Action</th>
			</tr>
		</thead>
		<tbody>
		</tbody>
	</table>
</div>
@section Scripts
	{
	<script>
		$(document).ready(function () {
			$('#userTable').DataTable({
				data: @Json.Serialize(Model),
				scrollX: true,
				columns: [
					{ data: "categoriesId" },
					{ data: "productCode" },
					{ data: "productName" },
					{ data: "description" },
					{ data: "specification" },
					{ data: "price" },
					{ data: "isOnSale" },
					{ data: "bestProduct" },
					{ data: "recommended" },
					{ data: "createdAt" },
					{ data: "updatedAt" },
					{
						data: 'productId',
						render: function (data, type, row) {
							return '<a href="/Dashboard/EditData?dataId=' + data + '"><i class="fa-solid fa-pen icon-spacing"></i></a>' +
									'<i class="fa-solid fa-trash-can icon-spacing"></i>'
						}
					},
				],
				columnDefs: [
					{ targets: '_all', className: 'dt-left' }
				],
			});
		});
	</script>
}